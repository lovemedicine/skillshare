generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:skillshare.db"
}

model Skill {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  name      String    @unique
  users     UserSkill[]
}

model UserSkill {
  id        Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now())
  username  String
  userId    String
  skill     Skill     @relation(fields: [skillId], references: [id])
  skillId   Int
  type      String
}